    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "prettier": "3.1.0",
    "ts-jest": "29.1.1",
    "ts-toolbelt": "9.6.0",
    "typescript": "5.3.2",
    "unocss": "0.58.0",
    "vite": "5.0.6",
    "vite-plugin-pwa": "0.17.4"
  },
  "packageManager": "yarn@4.0.2"
