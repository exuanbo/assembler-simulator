{
  "name": "samphire-ts",
  "private": "true",
  "scripts": {
    "preact:build": "preact build --template src/template.html",
    "purgecss": "node scripts/purgecss.js",
    "build:clean": "rimraf build/ssr-build size-plugin.json",
    "build": "yarn preact:build && yarn purgecss && yarn build:clean",
    "dev": "preact watch --template src/template.html",
    "lint": "ts-standardx",
    "lint:fix": "ts-standardx --fix",
    "test": "yarn lint && yarn build && jest --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exuanbo/samphire-ts.git"
  },
  "author": "exuanbo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/exuanbo/samphire-ts/issues"
  },
  "homepage": "https://github.com/exuanbo/samphire-ts#readme",
  "dependencies": {
    "antd": "4.8.4",
    "preact": "10.5.7",
    "preact-render-to-string": "5.1.12"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "3.0.0",
    "@types/jest": "26.0.15",
    "@types/react": "16.9.56",
    "jest": "26.6.3",
    "preact-cli": "3.0.3",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.4",
    "ts-standardx": "0.4.1",
    "typescript": "4.0.5"
  }
